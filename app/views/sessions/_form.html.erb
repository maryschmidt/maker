<div id="center_box">
  <h2>Welcome back!</h2>
  <%= form_for :session, :url => session_path do |form| %>
    <div class="field">
      <div class="text_field">
        <%= form.label :email %>
        <%= form.text_field :email, :type => "email" %>
      </div>
    </div>
    <div class="field">
      <div class="text_field">
        <%= form.label :password %>
        <%= form.password_field :password %>
      </div>
    </div>
    <div class="signup">
      <div class="submit_field">
        <%= form.submit "Sign in" %>
        <%= link_to "Forgot password?", new_password_path %>
      </div>
    </div>
  </div>
<% end %>
