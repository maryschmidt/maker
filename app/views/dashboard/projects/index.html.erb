<div class="buff"></div>

<div class="maker-info">
  <%= current_user.name.capitalize %><br />
  <%= "Following: #{current_user.followed_users.count}" %>
  <%= "Followers: #{current_user.followers.count}" %>
  <div class="buff"></div>
  <div class="button-small"><%= link_to 'New Project', new_project_path %></div>
</div>

<div class="user-projects-box">
  <h1>Projects you're watching</h1>
  <% @projects.each do |project| %>
    <div class="project-image-thumb">
      <% unless project.image_file_size == nil %>
        <%= link_to image_tag(project.image.url(:thumb)), project %>
      <% end %>
    </div>
  <% end %>
</div>
