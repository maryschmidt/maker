<div class="buff"></div>

<div class="maker-info">
  <h3><%= current_user.name.upcase %></h3><br />
  <%= "Following: #{current_user.followed_users.count}" %>
  <%= "Followers: #{current_user.followers.count}" %>
  <div class="buff"></div>
  <div class="button-small"><%= link_to "New Project", new_project_path %></div>
  <div class="goals">
    <% current_user.goals.unmet.each do |goal| %>
      <%= link_to goal.goal, edit_goal_path(goal) %><br />
    <% end %>
  </div>
  <div class="button-small"><%= link_to "New Goal", new_goal_path %></div>
</div>

<div class="user-projects-box">
  <h1>
    <%= "You're watching #{pluralize(current_user.followed_projects.count, "project")}" %>
  </h1>
  <% @projects.each do |project| %>
    <div class="project-image-thumb">
      <%= link_to image_tag(project.image.url(:thumb)), project %>
    </div>
  <% end %>
</div>
